<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label for="inputName">Title</label><br>
  <%= f.text_field :title, id:"inputName" %><br>
  <label for="inputBody">Opinion</label><br>
  <%= f.text_area :body, id:"inputBody"  %>  <br>
  <%= f.submit "Update Book" %><br>
  <%= link_to "Back" , books_path %>
  <%= link_to "Show" , book_path(@book) %>
<% end %>