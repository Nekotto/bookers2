<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- ユーザーの詳細 -->
      <div>
        <h1>User info</h1>
        <%= image_tag @user.get_profile_image(100,100) %>
        <h3><%= @user.name %></h3>
        <h3>introduction</h3>
        <h4><%= @user.introduction %></h4>
      </div>
      <%= link_to edit_user_path(@user) do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
  
      <!--投稿-->
      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table>
        <tr>
          <th>
          <%= link_to user_path(@books.user_id) do %>
          <%= image_tag @user.get_profile_image(100,100) %><br>
          <%= @books.user.name %>
          <% end %>
          </th>
          <th>
          <%= link_to book_path(@books) do %>
          <%= @books.title %>
          <% end %>
          </th>
          <th><%= @books.body %></th>
    
          <% if @books.user == current_user %>
          <th><%= link_to "Edit", edit_book_path(@books) %></th>
          <th><%= link_to "Destroy", book_path(@books), method: :delete %></th>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>