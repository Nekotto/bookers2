<% if @article.errors.any? %>
  <%= @article.errors.count %>件のエラーが発生しました
  <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- ユーザーの詳細 -->
      <div>
        <h3>ユーザー情報</h3>
        <%= image_tag @user.get_profile_image(100,100) %>
        <h3><%= @user.name %></h3>
        <h3>introduction</h3>
        <h4><%= @user.introduction %></h4>
      </div>
      <%= link_to edit_user_path(@user) do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </div>
      <!-- 投稿 -->
<div class="col-md-8 offset-md-1">
  <h4>新規投稿</h4>
    <%= form_with model: @article do |f| %>
    <h5>画像</h5>
      <%= f.file_field :image, accept: "image/*" %>
    <h5>タイトル</h5>
      <%= f.text_field :title,  class: 'form-control',size: "20x10"%>
    <h5>本文</h5>
      <%= f.text_area :body,  class: 'form-control',size: "20x10"%>
      <%= f.submit '投稿', class: "btn btn-secondary" %>
  <% end %>
</div>
</div>
</div>