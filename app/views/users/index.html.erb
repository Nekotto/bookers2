<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- ユーザーの詳細 -->
      <div>
        <h1>User info</h1>
        <%= image_tag @user.get_profile_image(100,100) %>
        <h3><%= @user.name %></h3>
        <h3>introduction</h3>
        <h4><%= @user.introduction %></h4>
      </div>
      <%= link_to edit_user_path(@user) do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
      <!--投稿-->
      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <!-- 全投稿一覧 -->
    <div class="offset-md-1 col-md-8">
    <h1>Users</h1>
      <table>
    <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
    </thead>
      <% @users.each do |user| %>
    <tr>
      <th><%= image_tag user.get_profile_image(100,100) %></th>
      <th><%= user.name %></th>
      <th><%= link_to "Show", user_path(user.id) %>
      <% end %></th>
    </tr>
  </div>
</div>
</div>