<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- ユーザーの詳細 -->
      <div>
        <h1>User info</h1>
        <%= image_tag @user.get_profile_image(100,100) %>
        <h3><%= @user.name %></h3>
        <h3>introduction</h3>
        <h4><%= @user.introduction %></h4>
      </div>
      <%= link_to edit_user_path(@user) do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
  
      <!--投稿-->
      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  
    <div class="col-md-8 offset-md-1">
  
  <!-- ユーザーの投稿一覧 -->
    <h1>Books</h1>
      <table>
      <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      </thead>
      
      <% @books.each do |book| %>
        <%= link_to user_path(book.user) do %>
        <tr>
            <th><%= image_tag book.user.get_profile_image(100,100) %></th>
          <% end %>
          <th><%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %></th>
            <th><%= book.body %></th>
        </tr>
      <% end %>
      
      </table>
    </div>
  </div>
</div>